<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddComments">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/temporary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textColor="#2196f3"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:textSize="32dp" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/sv_questionddetails"
        android:layout_below="@id/layout_header"
        android:layout_width="match_parent"
        android:background="#8888"
        android:layout_height="300dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="300dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_questionaddeddetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Question"/>
        <TextView
            android:id="@+id/tv_questionaddeddificulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=" easyy" />
        <TextView
            android:id="@+id/tv_questionaddedmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Marks: "/>
        <ImageView
            android:id="@+id/iv_questionaddedimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </ScrollView>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_below="@id/sv_questionddetails"
       android:layout_marginTop="15dp"
       android:layout_height="match_parent">

       <ScrollView
           android:id="@+id/comments_area"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:background="#CDCBCB">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
       </ScrollView>
       <Button
           android:id="@+id/btn_AcceptQuestion"
           android:layout_below="@id/comments_area"
           android:backgroundTint="#2196f3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="200dp"
           android:text="Accept"
           />
       <Button
           android:id="@+id/btn_RejectQuestion"
           android:layout_below="@id/comments_area"
           android:backgroundTint="#2196f3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:paddingRight="20dp"
           android:text="Reject"
           />
       <LinearLayout
           android:layout_marginTop="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/btn_RejectQuestion"
           android:orientation="horizontal"
           android:padding="10dp"

          >

           <Button
               android:id="@+id/btn_q1"
               android:layout_marginLeft="14dp"
               android:backgroundTint="#2196f3"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:text="1"
               android:textSize="25dp"
              />
           <Button
               android:id="@+id/btn_q2"
               android:layout_marginLeft="14dp"
               android:backgroundTint="#2196f3"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:text="2"
               android:textSize="25dp"
               />
           <Button
               android:id="@+id/btn_q3"
               android:layout_marginLeft="14dp"
               android:backgroundTint="#2196f3"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:text="3"
               android:textSize="25dp"
               />
           <Button
               android:id="@+id/btn_q4"
               android:layout_marginLeft="14dp"
               android:backgroundTint="#2196f3"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:text="4"
               android:textSize="25dp"
               />
           <Button
               android:id="@+id/btn_q5"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_marginLeft="14dp"
               android:backgroundTint="#2196f3"
               android:text="5"
               android:textSize="25dp" />

           <Button
               android:id="@+id/btn_q6"
               android:layout_marginLeft="14dp"
               android:backgroundTint="#2196f3"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:text="6"
               android:textSize="25dp"
               />




       </LinearLayout>

       <Button
           android:id="@+id/btn_approve"
           android:layout_below="@+id/btn_RejectQuestion"
           android:backgroundTint="#2196f3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Approve"
           android:layout_marginTop="130dp"/>
   </RelativeLayout>
</RelativeLayout>